<resources>

  <style name="AppTheme"
      parent="Base.Theme.DesignDemo">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:actionMenuTextColor">@color/black</item>
    <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="ActTheme"
      parent="Base.Theme.DesignDemo">
    <item name="android:windowIsTranslucent">true</item>
    <item name="actionMenuTextColor">@color/black</item>
  </style>

  <style name="Act"
      parent="Base.Theme.DesignDemo">
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="Base.Theme.DesignDemo"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryDark">#A0A0A0</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="actionMenuTextColor">@color/black</item>
    <item name="windowActionModeOverlay">true</item>
  </style>

  <style name="ToolBarStyle" parent="Theme.AppCompat.Light">
    <item name="android:textColorPrimary">#696D6F</item>
    <item name="android:textColorSecondary">#696D6F</item>
    <item name="actionMenuTextColor">#696D6F</item>
  </style>

  <style name="DetailToolBarStyle" parent="Theme.AppCompat.Light">
    <item name="android:textColorPrimary">#696D6F</item>
    <item name="android:textColorSecondary">@android:color/white</item>
    <item name="actionMenuTextColor">@color/colorAccent</item>
  </style>


  <style name="FontActicle">
    <item name="fontPath">fonts/beauty.ttf</item>
  </style>

  <style name="FontComm">
    <item name="fontPath">fonts/beauty.ttf</item>
  </style>

  <style name="FontFun">
    <item name="fontPath">fonts/fun_font.TTF</item>
  </style>

  <style name="FontSq">
    <item name="fontPath">fonts/Apple-LiSung-Light.ttf</item>
  </style>
  <style name="FontDate">
    <item name="fontPath">fonts/AGaramondPro-Regular.otf</item>
  </style>



  <style name="menu_labels_style">
    <item name="android:background">@drawable/fab_label_background</item>
    <item name="android:textColor">@color/white</item>
  </style>


  <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <item name="android:windowFullscreen">true</item>
  </style>

</resources>
